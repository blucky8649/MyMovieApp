<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorControlHighlight">@color/colorLightPink</item>
    </style>

    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="android:colorForeground">@color/colorLightGray</item>

    </style>
</resources>